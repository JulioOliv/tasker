<h3>{{i18n-uppercase 'type.project'}} #{{id}}: {{title}}</h3>
<p>
	<i>{{description}}</i>
</p>
<p>	
	<i class="icon-time"></i> {{formatDate createdDate}}<br/>
	<i class="icon-user"></i> <u>{{assignee}}</u>
</p>
<div class="btn-group">
  <a class="btn" href="/card/{{id}}/new-story" data-internal="true"><i class="icon-plus"></i>{{i18n-lowercase 'action.create'}} {{i18n 'type.story'}}</a>
  <a class="btn remove-project" data-action="delete"><i class="icon-remove"></i>{{i18n-lowercase 'action.remove'}} {{i18n 'type.project'}}</a>
</div>
<section id="project_{{id}}_stories" class="stories">
</section>