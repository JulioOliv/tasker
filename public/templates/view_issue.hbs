<h5>{{type}} #{{id}}<br/> {{title}}</h5>
<p>
	<i>{{description}}</i> por <u>{{assignee}}</u>.
</p>
<p>
	Criada em {{formatDate createdDate}}.<br/>
	Modificada em {{formatDate modifiedDate}}.
</p>
<div class="btn-group btn-group-vertical">
	{{#if previous}}
		<a class="btn" data-action="move_previous"><i class="icon-backward"></i>{{previous}}</a>
	{{/if}}
	{{#if next}}
  		<a class="btn" data-action="move_next"><i class="icon-forward"></i>{{next}}</a>
	{{/if}}
	<a class="btn remove-issue" data-action="delete"><i class="icon-remove"></i>remover</a>
	
</div>